<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="estate_property_offer_view_tree" model="ir.ui.view">
        <field name="name">re.estate.property.offer.view.tree</field>
        <field name="model">re.estate.property.offer</field>
        <field name="arch" type="xml">
            <tree multi_edit="1" sample="1">
                <field name="price"/>
                <field name="partner_id"/>
                <field name="validity" string="Validity (days)"/>
                <field name="date_deadline" string="Deadline"/>
                <button name="action_accept" type="object" icon="fa-check"/>
                <button name="action_refuse" type="object" icon="fa-close"/>
                <!-- <button type="action" name="%(test.test_model_action)d" string="My Action"/> -->
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="estate_property_offer_view_form" model="ir.ui.view">
        <field name="name">re.estate.property.offer.view.form</field>
        <field name="model">re.estate.property.offer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="price"/>
                        <field name="partner_id"/>
                        <field name="validity" string="Validity (days)"/>
                        <field name="date_deadline" string="Deadline"/>
                        <field name="status"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
